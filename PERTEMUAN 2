#include <iostream>

using namespace std;

int main() {
    // Deklarasi variabel untuk menyimpan luas, panjang, dan lebar
    float luas;  // variabel untuk menyimpan luas
    float p;     // variabel untuk menyimpan panjang
    float l;     // variabel untuk menyimpan lebar

    //* const float PHI = 3.14; (komentar ini hanya sebagai contoh, karena PHI tidak digunakan dalam kode ini)

    // Minta pengguna untuk memasukkan panjang
    cout << "Masukkan panjang : ";
    // Gunakan cin untuk membaca input floating-point dari pengguna
    cin >> p;

    // Minta pengguna untuk memasukkan lebar
    cout << "Masukkan lebar : ";
    // Gunakan cin untuk membaca input floating-point dari pengguna
    cin >> l;

    // Hitung luas dengan rumus luas = p x l
    luas = p * l;

    // Cetak hasil perhitungan
    cout << "Luas = " << luas << endl;

    // Kembali ke sistem operasi dengan nilai 0 (tidak ada error)
    return 0;
}

